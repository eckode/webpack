{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "ES2021",
    "types": ["webpack-env", "node"],
    "skipLibCheck": true
  },
  "include": ["src/*"]
}