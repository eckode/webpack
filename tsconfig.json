{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist/"
  },
  "include": [
    "src/*",
    "jest.ts",
    "src/**/*.d.ts"
  ]
}