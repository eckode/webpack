{
  "name": "@eckode/webpack",
  "version": "0.0.1",
  "description": "JavaScript with TypeScript. CSS with SCSS. Built with Webpack. Serving with Webpack-Dev-Server and HMR.",
  "keywords": [
    "webpack",
    "typescript",
    "babel",
    "SASS",
    "CSS",
    "SCSS",
    "hmr",
    "JavaScript",
    "boilerplate"
  ],
  "author": "Jared Rethman <jaredrethman@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eckode/webpack.git"
  },
  "bugs": {
    "url": "https://github.com/eckode/webpack/issues"
  },
  "homepage": "https://github.com/eckode/webpack",
  "scripts": {
    "build": "yarn clean-dist && webpack --config=configs/webpack/prod.js",
    "clean-dist": "rimraf dist/*",
    "lint": "eslint './src/**/*.{js,ts,tsx}' --quiet",
    "start": "webpack serve --config=configs/webpack/dev.js",
    "start-prod": "yarn build && node express.js",
    "test": "jest --coverage --watchAll --config=configs/jest.ts"
  },
  "bin": {
    "ecko-webpack": "./bin/ecko-webpack.js"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "babel-loader": "^9.1.0",
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "css-loader": "^6.7.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "express": "^4.18.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "resolve-bin": "^1.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "web-vitals": "^3.0.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
